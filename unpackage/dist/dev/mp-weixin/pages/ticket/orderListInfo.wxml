<view class="container"><view class="order-info"><text class="pord-title">{{data.title}}</text><text class="pord-currDate">{{"游玩日期："+data.useDate}}</text><text class="pord-price">{{"单价：￥"+data.price}}</text><text class="pord-price">{{"数量："+data.saleNumber}}</text></view><view class="order-info"><text class="pord-title">取票人</text><block wx:for="{{$root.l0}}" wx:for-item="person" wx:for-index="index" wx:key="index"><view class="person-view"><view class="person-info"><text class="person-name">{{"姓名："+person.$orig.userName}}</text><text class="person-phone">{{"手机："+person.$orig.userPhone}}</text><text class="person-idcard">{{"身份证："+person.$orig.userIdcard}}</text><block wx:if="{{person.$orig.ticketElecFlag}}"><view class="ticket-container"><text class="elec-title">——雪票电子码——</text><block wx:if="{{person.$orig.ticketElectronicCode!=null&&person.$orig.ticketElectronicCode!=''}}"><text class="person-idcard">{{person.$orig.ticketElectronicCode}}</text></block><block wx:if="{{person.$orig.ticketQrCode!=null&&person.$orig.ticketQrCode!=''}}"><image style="margin-top:5px;height:100px;width:100px;" src="{{person.m0+person.$orig.ticketQrCode}}"></image></block></view></block></view></view></block></view><view class="order-info"><view class="remark-view"><text class="remark-text">备注</text><text class="remark-desc">{{data.remark}}</text></view></view><view class="footer"><view class="price-content"><block wx:if="{{data.payStatus==='0'}}"><text>未支付</text></block><block wx:if="{{data.payStatus==='1'}}"><text>已支付</text></block><block wx:if="{{data.payStatus==='3'}}"><text>已支付(部分退款)</text></block><block wx:if="{{data.payStatus==='2'}}"><text>已退款</text></block><text class="price-tip">￥</text><block wx:if="{{data.payStatus!=='0'}}"><text class="price">{{data.payMoney}}</text></block><block wx:if="{{data.payStatus==='0'}}"><text class="price">{{data.wantPayMoney}}</text></block></view><block wx:if="{{data.orderStatus==='3'}}"><text data-event-opts="{{[['tap',[['toPay',['$0'],['data.id']]]]]}}" class="submit" bindtap="__e">立即支付</text></block></view></view>