<view class="container"><view class="order-info"><text class="pord-title">{{data.title}}</text><text class="pord-currDate">{{"预约开始日期："+data.startDate}}</text><text class="pord-price">{{"预约结束日期："+data.endDate}}</text><text class="pord-price">{{"合计天数："+data.sumDay+"天"}}</text><block wx:for="{{teachModeList}}" wx:for-item="teachMode" wx:for-index="__i0__" wx:key="dictValue"><block wx:if="{{data.tcMode==teachMode.dictValue}}"><text class="pord-price">{{"教学模式："+teachMode.dictLabel}}</text></block></block><text class="pord-price">{{"教学时间："+data.tcTime+"小时"}}</text></view><view class="order-info"><text class="pord-title">联系人</text><view class="person-view"><view class="person-info"><text class="person-name">{{"姓名："+data.contacts}}</text><text class="person-phone">{{"手机："+data.phone}}</text><text class="person-phone">{{"地址："+data.address}}</text><text class="person-phone">{{"微信号："+data.wechat}}</text></view></view></view><view class="order-info"><view class="remark-view"><text class="remark-text">备注</text><text class="remark-desc">{{data.remark}}</text></view></view><view class="footer"><view class="price-content"><block wx:if="{{data.payStatus==='0'}}"><text>未支付</text></block><block wx:if="{{data.payStatus==='1'}}"><text>已支付</text></block><block wx:if="{{data.payStatus==='3'}}"><text>已支付(部分退款)</text></block><block wx:if="{{data.payStatus==='2'}}"><text>已退款</text></block><text class="price-tip">￥</text><block wx:if="{{data.payStatus!=='0'}}"><text class="price">{{data.payMoney}}</text></block><block wx:if="{{data.payStatus==='0'}}"><text class="price">{{data.wantPayMoney}}</text></block></view><block wx:if="{{data.orderStatus==='3'}}"><text data-event-opts="{{[['tap',[['toPay',['$0'],['data.id']]]]]}}" class="submit" bindtap="__e">立即支付</text></block></view></view>